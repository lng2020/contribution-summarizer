{
  "name": "contribution-summary",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "start": "concurrently \"npm run start:client\" \"npm run start:server\"",
    "start:client": "cd client && vite",
    "start:server": "cd server && node dist/index.js",
    "dev": "concurrently \"npm run dev:client\" \"npm run dev:server\"",
    "dev:client": "cd client && vite",
    "dev:server": "cd server && nodemon --watch 'src/**/*.ts' --exec 'node --loader ts-node/esm' src/index.ts",
    "build": "npm run build:client && npm run build:server",
    "build:client": "cd client && tsc && vite build --outDir dist",
    "build:server": "cd server && tsc",
    "preview": "cd client && vite preview",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx ./client ./server",
    "format": "prettier --write '**/*.{js,jsx,ts,tsx,json,md,css,scss}'",
    "lint:fix": "eslint --ext .js,.jsx,.ts,.tsx ./client ./server --fix"
  },
  "dependencies": {
    "@octokit/graphql": "^8.1.1",
    "axios": "^1.6.8",
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "openai": "^4.37.1",
    "react": "^18.2.0",
    "react-datepicker": "^6.9.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.13",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.12.7",
    "@types/react": "^18.2.79",
    "@types/react-datepicker": "^6.2.0",
    "@types/react-dom": "^18.2.25",
    "@typescript-eslint/eslint-plugin": "^7.7.1",
    "@typescript-eslint/parser": "^7.7.1",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.19",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^4.6.2",
    "nodemon": "^3.1.0",
    "postcss": "^8.4.38",
    "prettier": "^3.2.5",
    "react-markdown": "^9.0.1",
    "tailwindcss": "^3.4.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5",
    "vite": "^5.2.10",
    "vite-tsconfig-paths": "^4.3.2",
    "web-vitals": "^3.5.2"
  }
}
